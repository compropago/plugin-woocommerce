{
  "name": "compropago/php-sdk",
  "type": "library",
  "description": "PHP SDK for ComproPago API",
  "keywords": ["pagos internet","payment gateway"],
  "homepage": "https://github.com/compropago/compropago-php",
  "version": "5.0.0.0",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Eduardo Aguilar",
      "email": "eduardo.aguilar@compropago.com"
    }
  ],
  "require": {
    "php": ">=5.6",
    "rmccue/requests": "^1.7"
  },
  "require-dev":{
    "phpunit/phpunit": ">=4.8",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "CompropagoSdk\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
        "Tests\\": "tests"
    }
  },
  "scripts" : {
    "test": "./vendor/bin/phpunit --coverage-clover=coverage.xml"
  }
}
